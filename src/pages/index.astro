---
import BaseLayout from '../layouts/BaseLayout.astro'
import Header from '../components/Header.svelte'
import Hero from '../components/Hero.astro'
import Features from '../components/Features.astro'
import Screenshots from '../components/Screenshots.svelte'
import Footer from '../components/Footer.astro'
import Roadmap from '../components/Roadmap.astro'
import About from '../components/About.svelte'
---

<BaseLayout>
  <Header client:only='svelte' />
  <main>
    <Hero />
    <About client:only='svelte' />
    <Features />
    <Screenshots client:only='svelte' />
    <Roadmap />
  </main>
  <Footer />
</BaseLayout>

<script is:inline>
  document
    .querySelectorAll('.shining-card-border-interaction')
    .forEach((card) => {
      card.onmousemove = (e) => {
        const rect = card.getBoundingClientRect()
        const x = e.clientX - rect.left
        const y = e.clientY - rect.top
        card.style.setProperty('--x', `${y}px`)
        card.style.setProperty('--y', `${x}px`)
        console.log(x, y)
      }
    })
</script>
